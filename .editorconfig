# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[**]
# The way we code
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[**.md]
# Special treatment for markdown
trim_trailing_whitespace = false

[*.json]
# Special treatment for json files
indent_size = 2

[.jshintrc]
# Special treatment for jshintrc files
indent_size = 2

[Makefile]
indent_style = tab
